<div class="field is-grouped mb-2">
    <div class="control is-expanded">
        <div class="select is-fullwidth">
            <select name="chemical_ids">
                <option value="">Select a chemical</option>
                <option tal:repeat="chem chemicals" tal:attributes="value chem.id">
                    ${chem.name}
                </option>
            </select>
        </div>
    </div>

    <div class="control">
        <input class="input" type="number" step="0.01" name="mix_rates" placeholder="Mix rate / 100L" required>
    </div>

    <div class="control">
        <button type="button" class="button is-danger is-light" hx-target="closest .field" hx-swap="outerHTML:remove">
            Remove
        </button>
    </div>
</div>