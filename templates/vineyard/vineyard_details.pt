<div metal:use-macro="load: ../shared/_layout.pt">
    <div metal:fill-slot="content" tal:omit-tag="True">
        <div class="section content">
            <div class="container vineyard">
                <div class="vineyard container">
                    <h1 class="title">${vineyard.name}</h1>


                    <section class="content">
                        <container class="managements_unit_list">
                            <h2 class="title">Management Units</h2>
                            <table>
                                <thead>
                                    <th>Name</th>
                                    <th>Variety</th>
                                    <th>Area (ha) </th>
                                    <th>Row Width (m)</th>
                                    <th># Rows</th>
                                    <th>Row Numbering</th>
                                    <th>Vine Spacing (m)</th>
                                </thead>
                                <tbody>
                                    <tr tal:repeat="mu management_units" id="management_unit_row_${mu.id}">
                                        <th class="name"><a href="#">${mu.name}</a></th>
                                        <td>${mu.variety.name}</td>
                                        <td>${mu.area} ha</td>
                                        <td>${mu.row_width} m</td>
                                        <td>${mu.rows_total}</td>
                                        <td>${mu.rows_start_number} - ${mu.rows_end_number}</td>
                                        <td>${mu.vine_spacing}</td>
                                        <td tal:condition="is_logged_in">
                                            <button class="button is-info is-small"
                                                hx-get="/management_unit/${mu.id}/edit"
                                                hx-target="#management_unit_row_${mu.id}" hx-swap="outerHTML">
                                                Edit
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </container>
                    </section>
                    <section class="content">
                        <container class="spray_record_list">
                            <h2 class="title">Spray Records</h2>
                            <table class="table is-striped is-hoverable is-fullwidth">
                                <thead>
                                    <tr>
                                        <th>Management Unit</th>
                                        <th>Spray Program</th>
                                        <!-- <th>Operator</th> -->
                                        <!-- <th>Date</th> -->
                                        <th>Program Details</th>
                                        <th>Complete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr tal:repeat="mu management_units">
                                    <tr tal:repeat="sr mu.spray_records">
                                        <td>${mu.name} &mdash; ${mu.variety.name}</td>
                                        <td>${sr.spray_program.name}</td>
                                        <!-- <td>${sr.operator}</td> -->
                                        <!-- <td>${sr.date_created.strftime('%Y-%m-%d')}</td> -->
                                        <td>
                                            <table class="table is-narrow is-fullwidth is-bordered is-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Chemical</th>
                                                        <th class="has-text-right">Mix Rate (per 100L)</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr tal:repeat="spc sr.spray_program.spray_program_chemicals">
                                                        <td>${spc.chemical.name}</td>
                                                        <td class="has-text-right">${spc.mix_rate_per_100L}</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </td>
                                        <td>
                                            <span class="tag is-small" tal:condition="sr.complete">✅ Complete</span>
                                            <span class="tag is-small is-warning" tal:condition="not sr.complete">⏳
                                                Incomplete</span>
                                        </td>
                                    </tr>
                                    </tr>
                                </tbody>
                            </table>
                        </container>
                    </section>
                </div>
            </div>
        </div>
        <div class="section content">
            <div class="container vineyard">
                <section class="content">
                    <container class="${vineyard.name}-map">
                        <h2 class="title">${vineyard.name} Map</h2>
                        <div id="map"></div>
                    </container>
                </section>
            </div>
        </div>
    </div>

